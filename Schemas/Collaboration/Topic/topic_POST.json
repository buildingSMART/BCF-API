{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "title": "topic_POST",
    "description": "Schema for topic POST, BCF REST API.",
    "type": "object",
    "properties": {
        "guid": {
            "type": ["string",
            "null"]
        },
        "topic_type": {
            "$ref": "topic_type_SET.json"
        },
        "topic_status": {
            "type": ["string",
            "null"]
        },
        "reference_links": {
            "type": ["array",
            "null"],
            "items": {
                "type": "string"
            }
        },
        "title": {
            "required": true,
            "type": "string"
        },
        "priority": {
            "type": ["string",
            "null"]
        },
        "index": {
            "type": [
                "integer",
                "null"
            ]
        },
        "labels": {
            "type": ["array",
            "null"],
            "items": {
                "type": ["string",
                "null"]
            }
        },
        "assigned_to": {
            "type": ["string",
            "null"]
        },
        "stage": {
            "type": ["string",
            "null"]
        },
        "description": {
            "type": ["string",
            "null"]
        },
        "due_date": {
            "type": ["string",
            "null"]
        },
        "custom_fields": {
            "$ref": "custom_fields.json"
        }
    }
}
